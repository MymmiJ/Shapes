{
    "name": "MymmiJ/shapes",
    "type": "library",
    "description": "Library package for processing shapes.",
    "keywords": [
        "MymmiJ",
        "shapes",
        "geometry",
        "3D"
    ],
    "homepage": "https://github.com/MymmiJ/shapes",
    "license": "MIT",
    "authors": [
        {
            "name": "Jimmy MacGregor",
            "email": "jimmy.macgregor@futurenet.com",
            "homepage": "http://www.example.com",
            "role": "Audience Development"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Github\\Shapes\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Github\\Shapes\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
